<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <form action="/" method="post" class="item">
    <input
      type="text"
      name="new-item"
      placeholder="Enter new todo item..."
      autocomplete="off"
      autofocus
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>

  <% for (let i = 0; i < todos.length; i++) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        onchange="this.form.submit()"
        name="todo"
        value="<%= todos[i]._id %>"
      />
      <input type="hidden" name="currentList" value="<%= listTitle %>"></input>
      <p><%= todos[i].content %></p>
    </div>
  </form>
  <% } %>
</div>
